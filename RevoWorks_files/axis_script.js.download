		$('.elementor-tab-title[data-tab="1"]' || '.elementor-tab-title[data-tab="2"]' || '.elementor-tab-title[data-tab="4"]').on('click', function() {
			$('.elementor-tab-content[data-tab="3"]').css('display', 'none');
		});
